<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.tropicthunder.sticket.MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="230sp"
        android:clickable="false"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RM"
        android:id="@+id/textView7"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingBottom="20sp"
        android:textColor="#2d2d2d"
        android:layout_marginStart="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/paidLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0.00"
        android:id="@+id/creditTxt"
        android:layout_marginRight="10sp"
        android:paddingLeft="5sp"
        android:paddingTop="10sp"
        android:paddingBottom="20sp"
        android:textColor="#2d2d2d"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7" />

    <RelativeLayout
        android:id="@+id/payLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/map">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of hours:"
            android:id="@+id/textView2"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="5sp" />

        <com.dd.CircularProgressButton
            android:id="@+id/payBtn"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cpb_textComplete="Success"
            app:cpb_textError="Please wait..."
            app:cpb_textIdle="Pay"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:onClick="buyTicket"
            android:layout_below="@+id/seekBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_below="@+id/textView2"
            android:max="8"
            android:paddingTop="10sp"
            android:visibility="invisible"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/noOfHrsTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/noOfHrsTxt"
            android:paddingLeft="5sp"
            android:text="0"
            android:layout_alignBottom="@+id/seekBar"
            android:layout_alignParentEnd="true"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginRight="10sp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logoutBtn"
            android:onClick="logOut"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/addressTxt"
            android:paddingBottom="10sp"
            android:text="Identifying location.."
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/logoutBtn"
            android:layout_marginEnd="26dp"
            android:layout_alignParentStart="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addressTxt"
            android:layout_alignBottom="@+id/addressTxt"
            android:src="@drawable/parking"
            android:padding="5sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/paidLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/map"
        android:layout_margin="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ticket expiry:"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&lt;expiry>"
            android:id="@+id/dateTxt"
            android:textStyle="bold"
            android:textColor="#a00000"
            android:textSize="30sp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase new ticket"
            android:id="@+id/purchaseNewBtn"
            android:layout_below="@+id/dateTxt"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20sp"
            android:layout_alignParentEnd="true"
            android:onClick="changeLayoutToMain" />
    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RELOAD"
        android:id="@+id/button"
        android:layout_marginRight="10sp"
        android:onClick="reloadCredit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:src="@drawable/money"
        android:paddingRight="10sp"
        android:paddingLeft="10sp" />

</RelativeLayout>
